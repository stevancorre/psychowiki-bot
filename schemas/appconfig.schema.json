{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "PsychoWiki bot configuration",
    "description": "The configuration for the PsychoWiki Telegram bot",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "token": {
            "type": "string",
            "title": "The telegram bot token",
            "pattern": "^[0-9]{8,10}:[a-zA-Z0-9_-]{35}$"
        },
        "logLevel": {
            "type": "string",
            "title": "The minimum level of logging",
            "enum": [
                "error",
                "warn",
                "info",
                "http",
                "verbose",
                "debug",
                "silly"
            ]
        },
        "restrictTo": {
            "title": "Restrict the bot to specifics channels",
            "type": "array",
            "items": {
                "type": "number"
            }
        },
        "cacheLifetime": {
            "title": "Axios cache lifetime (in seconds)",
            "type": "number",
            "minimum": 0
        }
    },
    "required": [
        "$schema",
        "token",
        "logLevel",
        "cacheLifetime"
    ]
}